#!/bin/bash

#Customize this for your application
APPLICATION_FILE_PATH=Glimmr

#Parameters
PRODUCT_HOME=/Library/__PRODUCT__/__VERSION__
echo "Post installation process started..."

#Change permissions in home directory
echo "Changing permissions in product home..."
cd ${PRODUCT_HOME}
chmod -R 755 .
[ -d /usr/local/bin ] || mkdir /usr/local/bin

echo "cp /Library/__PRODUCT__/__VERSION__/com.glimmr.loginscript.plist ~/Library/LaunchAgents/com.glimmr.loginscript.plist"
cp /Library/__PRODUCT__/__VERSION__/com.glimmr.loginscript.plist ~/Library/LaunchAgents/com.glimmr.loginscript.plist
launchctl load ~/Library/LaunchAgents/com.glimmr.loginscript.plist
echo "Post installation process finished"
